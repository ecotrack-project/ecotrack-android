<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when pressed -->
    <item android:state_pressed="true" android:color="#FFCDD2">
        <color android:color="#FFCDD2" /> <!-- Light red when pressed -->
    </item>

    <!-- State when focused -->
    <item android:state_focused="true" android:color="#BBDEFB">
        <color android:color="#BBDEFB" /> <!-- Light blue when focused -->
    </item>

    <!-- Default state -->
    <item android:color="@color/white">
        <color android:color="#FFFFFF" /> <!-- White as default -->
    </item>

</selector>
